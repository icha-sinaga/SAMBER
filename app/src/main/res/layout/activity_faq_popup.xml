<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FaqActivityPopup"
    android:background="#69D9D9D9">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="32dp"
        android:id="@+id/back1"/>

    <TextView
        android:id="@+id/tvFaq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="F.A.Q"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:fontFamily="@font/poppinsbold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/popupFaq"
        android:layout_width="296dp"
        android:layout_height="315dp"
        android:layout_below="@+id/tvFaq"
        android:layout_marginTop="180dp"
        android:orientation="vertical"
        android:background="@drawable/popup"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        >

        <TextView
            android:id="@+id/tvKetFaq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/popupFaq"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:text="Pertanyaan anda akan segera dijawab"
            android:fontFamily="@font/poppinsbold"
            android:textSize="12sp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            />

        <ImageView
            android:id="@+id/fotoProfil"
            android:layout_width="281dp"
            android:layout_height="230dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:src="@drawable/done" />

    </LinearLayout>

    <Button
        android:id="@+id/btnOk1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_centerHorizontal="true"
        android:text="Ok"
        android:textSize="16sp"
        android:fontFamily="@font/poppinsbold"
        android:background="@drawable/button_shape_popup"
        android:textColor="#FFFFFF"
        android:layout_marginTop="510dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"

        />

</RelativeLayout>