<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity"
    android:background="@color/white"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="32dp"
        android:id="@+id/back1"/>

    <TextView
        android:id="@+id/tvProfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Profil"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:fontFamily="@font/poppinsbold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/bio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvProfil"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:background="@drawable/border"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp">

        <ImageView
            android:id="@+id/fotoProfil"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/user"
            android:layout_marginTop="22dp"

            />

        <TextView
            android:id="@+id/tvUbahFoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fotoProfil"
            android:layout_marginTop="8dp"
            android:textColor="@color/blue"
            android:text="Ubah Foto"
            android:fontFamily="@font/poppinssemibold"
            android:textSize="12sp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/titleNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvUbahFoto"
            android:layout_marginTop="16dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/black"
            android:text="Nama"
            android:fontFamily="@font/poppinssemibold"
            android:textSize="12sp"
            android:gravity="left"
            />
        <EditText
            android:id="@+id/editNama"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_below="@+id/inputNama"
            android:layout_marginTop="8dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/fill_pass"
            android:fontFamily="@font/poppinssemibold"
            android:hint="Budi Setiawan"
            android:textSize="12sp"
            android:paddingLeft="12dp" />


        <TextView
            android:id="@+id/titleTelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inputNama"
            android:layout_marginTop="8dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/black"
            android:text="No. Telepon"
            android:fontFamily="@font/poppinssemibold"
            android:textSize="12sp"
            android:gravity="left"
            />
        <EditText
            android:id="@+id/inputTelp"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_below="@+id/titleTelp"
            android:layout_marginTop="8dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/fill_pass"
            android:fontFamily="@font/poppinssemibold"
            android:hint="08xxxxxxxxx"
            android:textSize="12sp"
            android:paddingLeft="12dp" />


        <TextView
            android:id="@+id/titleAlamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inputTelp"
            android:layout_marginTop="8dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/black"
            android:text="Alamat"
            android:fontFamily="@font/poppinssemibold"
            android:textSize="12sp"
            android:gravity="left"
            />
        <EditText
            android:id="@+id/inputAlamat"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_below="@+id/titleAlamat"
            android:layout_marginTop="8dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/fill_pass"
            android:fontFamily="@font/poppinssemibold"
            android:hint="Jalan jalan kemana aja"
            android:textSize="12sp"
            android:paddingLeft="12dp" />

        <TextView
            android:id="@+id/titlePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inputAlamat"
            android:layout_marginTop="8dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/black"
            android:text="Password"
            android:fontFamily="@font/poppinssemibold"
            android:textSize="12sp"
            android:gravity="left"
            />
        <EditText
            android:id="@+id/inputPassword"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_below="@+id/titlePassword"
            android:layout_marginTop="8dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/fill_pass"
            android:fontFamily="@font/poppinssemibold"
            android:hint="Minimal6karakter"
            android:textSize="12sp"
            android:paddingLeft="12dp" />

        <Button
            android:id="@+id/btnSimpan"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_below="@+id/inputPassword"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="22dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_centerHorizontal="true"
            android:text="Simpan"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:background="@drawable/button_shape"
            android:textColor="@color/white"
            />



    </LinearLayout>

</RelativeLayout>