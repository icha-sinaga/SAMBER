<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MediaActivity"
    android:background="@color/white">

    <ImageView
        android:id="@+id/back1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="124dp"
        android:layout_toStartOf="@+id/tvMedia"
        android:src="@drawable/ic_back" />

    <TextView
        android:id="@+id/tvMedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Media"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:fontFamily="@font/poppinsbold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvArtikel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMedia"
        android:layout_marginTop="16dp"
        android:text="Artikel"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="@color/black"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        />

    <TextView
        android:id="@+id/tvKetArtikel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvArtikel"
        android:layout_marginTop="8dp"
        android:text="Hingga saat ini masih banyak pihak masyarakat yang belum tau cara mengelola sampah rumah tangga dengan baik dan benar. Maka dari itu, pada artikel ini akan dibahas mengenai cara mengelola sampah rumah tangga dan apa saja jenis sampah rumah tangga.\n\nDapat dilihat pada ilustrasi di bawah ini, untuk proses pengelolaan sampah rumah tangga."
        android:layout_centerHorizontal="true"
        android:textSize="10sp"
        android:fontFamily="@font/poppinsregular"
        android:textColor="@color/black"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        />

    <ImageView
        android:id="@+id/gambarArtikel"
        android:layout_width="296dp"
        android:layout_height="400dp"
        android:src="@drawable/artikel"
        android:layout_below="@+id/tvKetArtikel"
        android:layout_marginTop="8dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        />

    <TextView
        android:id="@+id/tvKetArtikel2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gambarArtikel"
        android:layout_marginTop="8dp"
        android:text="Baca Lanjutan artikel ini pada Link :"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="10sp"
        android:fontFamily="@font/poppinsregular"
        android:textColor="@color/black"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        />

    <TextView
        android:id="@+id/tvKetArtikel3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvKetArtikel2"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="32dp"
        android:text="https://www.djkn.kemenkeu.go.id/artikel/baca/14891/Pengelolaan-Sampah-di-Indonesia.html"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="8sp"
        android:fontFamily="@font/poppinsregular"
        android:textColor="@color/blue"
        android:linksClickable="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"

        />

</RelativeLayout>